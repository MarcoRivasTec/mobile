{
  "expo": {
    "name": "TECMA Móvil Connect Dev",
    "slug": "tecma-movil-connect-dev",
    "version": "1.0.8dev",
    "orientation": "portrait",
    "icon": "./assets/icon-dev.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon-dev.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "buildNumber": "8",
      "supportsTablet": true,
      "bundleIdentifier": "com.tecma.TecmaMovilConnectDev",
      "infoPlist": {
        "CFBundleDisplayName": "TECMA Móvil Connect Dev",
        "NSLocalNetworkUsageDescription": "This app requires access to the local network to retrieve the device name.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "versionCode": 8,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon-dev.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.tecma.movilconnecttest",
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "153d2bce-f72c-4eef-a175-4f73275e17c6"
      }
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          },
          "ios": {
            "infoPlist": {
              "NSAppTransportSecurity": {
                "NSAllowsArbitraryLoads": true
              }
            }
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ${appName} to access your location even when the app is in the background."
        }
      ]
    ]
  }
}